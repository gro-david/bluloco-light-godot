{
	"name": "bluloco-godot",
	"displayName": "Bluloco Godot",
	"icon": "icon.png",
	"version": "1.1.1",
	"description": "A beautiful Godot light theme based on Bluloco Light Italic and tools for game development with Godot Engine and GDScript. This has a modified version of the Godot Tools package included, so you dont have to install anything else.",
	"license": "MIT",
	"author": "gro-david",
	"publisher": "gro-david",
	"repository": {
		"type": "git",
		"url": "https://github.com/gro-david/bluloco-light-godot"
	},
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"theme",
		"light",
		"dark",
		"bluloco",
		"godot",
		"godot tools",
		"gdscript"
	],
	"contributes": {
		"themes": [
			{
				"label": "Bluloco Light Godot",
				"uiTheme": "vs",
				"path": "./themes/bluloco-light-godot-color-theme.json"
			},
			{
				"label": "Bluloco Dark Godot",
				"uiTheme": "vs",
				"path": "./themes/bluloco-dark-godot-color-theme.json"
			}
		],
		"languages": [
			{
				"id": "advanced-gdscript",
				"aliases": [
					"Advanced GDScript",
					"advanced-gdscript"
				],
				"extensions": [
					".gd"
				],
				"configuration": "./configurations/gdscript.language-configuration.json"
			},
			{
				"id": "advanced-gdscene",
				"aliases": [
					"Advanced GDScene",
					"advanced-gdscene"
				],
				"extensions": [
					"tscn"
				],
				"configuration": "./configurations/gdresource.language-configuration.json"
			},
			{
				"id": "advanced-gdresource",
				"aliases": [
					"Advanced GDResource",
					"advanced-gdresource"
				],
				"extensions": [
					"godot",
					"tres",
					"import",
					"gdns",
					"gdnlib"
				],
				"configuration": "./configurations/gdresource.language-configuration.json"
			},
			{
				"id": "advanced-gdshader",
				"aliases": [
					"advanced-gdshader"
				],
				"extensions": [
					".gdshader",
					".gdshaderinc"
				],
				"configuration": "./configurations/gdshader.language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "advanced-gdscript",
				"scopeName": "source.advanced-gdscript",
				"path": "./syntaxes/GDScript.tmLanguage.json"
			},
			{
				"language": "advanced-gdresource",
				"scopeName": "source.advanced-gdresource",
				"path": "./syntaxes/GDResource.tmLanguage.json"
			},
			{
				"language": "advanced-gdscene",
				"scopeName": "source.advanced-gdresource",
				"path": "./syntaxes/GDResource.tmLanguage.json"
			},
			{
				"language": "advanced-gdshader",
				"scopeName": "source.advanced-gdshader",
				"path": "./syntaxes/GDShader.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "gdscript",
				"path": "./configurations/snippets.json"
			}
		]
	}
}
